<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/app.css') }}" />
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body class="main-bg">
        <div class="wrapper">
            <header>
                <nav class="navbar navbar-default">
                    <div class="container-fluid">
                        <!-- Brand and toggle get grouped for better mobile display -->
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                            <a class="navbar-brand" href="{{ path('homepage') }}">Symfotest</a>
                        </div>

                        <!-- Collect the nav links, forms, and other content for toggling -->
                        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                            <ul class="nav navbar-nav">
                                <li class="{{ app.request.attributes.get('_route') == 'account' ? 'active' }}"><a href="{{ path('account') }}">Account</a></li>
                                <li class="{{ app.request.attributes.get('_route') == 'update_profile' ? 'active' }}"><a href="{{ path('update_profile') }}">Update Profile</a></li>
                                <li class="{{ app.request.attributes.get('_route') == 'choice_modules' ? 'active' }}"><a href="{{ path('choice_modules') }}">Wish modules</a></li>
                            </ul>

                            <ul class="nav navbar-nav navbar-right">
                                <li><a href="{{ path('logout') }}">Logout</a></li>

                            </ul>
                        </div><!-- /.navbar-collapse -->
                    </div><!-- /.container-fluid -->
                </nav>
            </header>

            {% block body %}
                <div class="container">
                    <div class="row">
                        {% block content %}
                        {% endblock %}
                    </div>
                </div>
            {% endblock %}
            {% block javascripts %}
                <script type="text/javascript" src="{{ asset('js/app.js') }}"></script>
            {% endblock %}
        </div>
    </body>
</html>
