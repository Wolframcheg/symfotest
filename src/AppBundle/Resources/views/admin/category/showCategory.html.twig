{% extends '::adminbase.html.twig' %}

{% block content %}
    <section class="content-header">
        <h1>{% block title %}Title{% endblock %}</h1>
        <ol class="breadcrumb">
            {#<li><a href="{{ url('admin_index') }}"><i class="fa fa-dashboard"></i> Home admin</a></li>#}
            {#<li><a href="{{ url('admin_comment_index') }}">Comment list</a></li>#}
            {#<li class="active">Edit Comment</li>#}
        </ol>
    </section>

    <section class="content">
        <table class="table table-border table-hover">
            <th>Title</th>
            <th>Edit</th>
            <th>Remove</th>
            <caption>
                <a href="{{ path('create_category') }}">Create category</a>
            </caption>
            {% for category in categories %}
                <tr>
                    <td>{{ category.title }}</td>
                    <td>{{ form(form_edit[category.id]) }}</td>
                    <td>{{ form(form_remove[category.id]) }}</td>
                </tr>
            {% endfor %}
        </table>

    </section>


{% endblock %}
