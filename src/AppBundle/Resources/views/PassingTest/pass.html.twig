{% extends '::base.html.twig' %}

{% block content %}
    <section class="content">
        <h1>
            {{ data.question.textQuestion }}
        </h1>
        <ul class="list-inline question-list">
            {% for i in 1..data.count_questions %}
                <li class="{{ i == data.current_number_question ? 'active' }}">{{ i }}</li>
            {% endfor %}
        </ul>
        {{ form(data.form) }}
        <div class="time_residue">
            Time residue: <span>{{ data.time_residue }}</span>
        </div>
    </section>
{% endblock %}