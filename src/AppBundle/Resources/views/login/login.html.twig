{% extends '::base.html.twig' %}

{% block content %}
    <div class="col-md-12">
        <br/><br/><br/>
        <div class="col-md-6 col-md-offset-3 well" style="background-color: white">
            {% if error %}
                <div class="alert alert-error">
                    <a class="close" data-dismiss="alert" href="#">Ã—</a>
                    {{ error.message }}
                </div>
            {% endif %}
            <form class="form col-md-12 center-block" method="post" action="{{ path('formLogin_check') }}">
                <div class="form-group">
                    <input type="text" class="form-control input-lg" placeholder="Email" name="_username" value="{{ last_username }}">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control input-lg" placeholder="Password" name="_password">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-lg btn-block">Sign In</button>
                    <span class="pull-left"><a href="{{ path('recovery_password') }}">Recovery password</a></span>
                </div>
            </form>
        </div>
    </div>
{% endblock %}