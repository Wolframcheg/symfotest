{% extends '::indexbase.html.twig' %}

{% block content %}
    <div class="col-md-6 col-md-offset-3">
        {% if error %}
            <div class="alert alert-error bg-danger">
                <a class="close" data-dismiss="alert" href="#">Ã—</a>
                {{ error.message }}
            </div>
        {% endif %}

        <form class="form" method="post" action="{{ path('formLogin_check') }}">
            <div class="form-group">
                <input type="text" class="form-control input-lg" placeholder="Email" name="_username" value="{{ last_username }}">
            </div>
            <div class="form-group">
                <input type="password" class="form-control input-lg" placeholder="Password" name="_password">
            </div>
            <button class="btn btn-primary btn-lg btn-block">Sign In</button>
            <div class="text-center"><a href="{{ path('recovery_password') }}">Recovery password</a></div>
        </form>

    </div>
{% endblock %}